{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "env": {
        "EMAIL_USER": "@email_user",
        "EMAIL_PASSWORD": "@email_password",
        "EXCEL_PATH": "@excel_path"
    }
} 